@page
@model ZelisTrainingRazorWebApp.Pages.Employees.IndexModel
@{
}
@using ZelisTrainingLibrary.Models;
<h2> List of Employees</h2>
<a class="btn btn-primary" asp-area="" asp-page="/Employees/Create">Add New Employee</a>
<br />
<br />
<br />


<!-- Designation Filter Form (Text Input) -->
<form method="get" class="form-inline mb-4">
    <div class="form-group d-flex align-items-center">
        <label for="designation" class="me-2 mb-0">Enter Designation:</label>
        <input type="text" name="designation" id="designation" class="form-control me-3"
               value="@Model.Designation" placeholder="e.g., Software Engineer" style="width: 250px;" />
        <button type="submit" class="btn btn-secondary">Apply Filter</button>
    </div>
</form>


<table border="1" class="table table-striped">
    <thead>
        <tr>
            <th>Employee Id</th>
            <th>Employee Name</th>
            <th>Designation</th>
            <th>Email</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee employee in Model.employees)
        {
            <tr>
                <td>@employee.EmpId</td>
                <td>@employee.EmpName</td>
                <td>@employee.Designation</td>
                <td>@employee.EmpEmail</td>
                <td>@employee.EmpPhoneNo</td>
                <td><a href="/Employees/Details/@employee.EmpId">Details</a></td>
                <td><a href="/Employees/Edit/@employee.EmpId">Edit</a></td>
                <td><a href="/Employees/Delete/@employee.EmpId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
