@page
@model ZelisTrainingRazorWebApp.Pages.Trainings.IndexModel
@{
}
@using ZelisTrainingLibrary.Models;

<h2> List of Trainings</h2>
<a class="btn btn-primary" asp-area="" asp-page="/Trainings/Create">Add new training</a>
<br />
<br />
<br />


<!-- TrainerId Filter Form (Text Input) -->
<form method="get" class="form-inline mb-4">
    <div class="form-group d-flex align-items-center">
        <label for="trainings" class="me-2 mb-0">Enter Trainer Id:</label>
        <input type="number" name="trainerId" id="trainerId" class="form-control me-3"
               value="@Model.TrainerId" placeholder="e.g., 11-400" style="width: 250px;" />
        <button type="submit" class="btn btn-secondary">Apply Filter</button>
    </div>
</form>




<!-- TechnologyId Filter Form (Text Input) -->
<form method="get" class="form-inline mb-4">
    <div class="form-group d-flex align-items-center">
        <label for="trainings" class="me-2 mb-0">Enter Technology Id:</label>
        <input type="number" name="techId" id="techId" class="form-control me-3"
               value="@Model.TechId" placeholder="e.g., 1-10" style="width: 250px;" />
        <button type="submit" class="btn btn-secondary">Apply Filter</button>
    </div>
</form>

<table border="1" class="table table-striped">
    <thead>
        <tr>
            <th>Training Id</th>
            <th>Trainer Id</th>
            <th>Technology Id</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Training training in Model.trainings)
        {
            <tr>
                <td>@training.TrainingId</td>
                <td>@training.TrainerId</td>
                <td>@training.TechnologyId</td>
                <td>@training.StartDate</td>
                <td>@training.EndDate</td>
                <td><a href="/Trainings/Details/@training.TrainingId">Details</a></td>
                <td><a href="/Trainings/Edit/@training.TrainingId">Edit</a></td>
                <td><a href="/Trainings/Delete/@training.TrainingId">Delete</a></td>
            </tr>
        }
    </tbody>
    </table>
